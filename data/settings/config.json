    "fields": {
        "general": [
            {
                "name": "firstname",
                "label": "Vorname",
                "type": "text",
                "minlength": 2,
                "width": 6,
                "autocomplete": "given-name",
                "show_in_overview": true
            },
            {
                "name": "lastname",
                "label": "Nachname",
                "type": "text",
                "minlength": 2,
                "width": 6,
                "autocomplete": "family-name",
