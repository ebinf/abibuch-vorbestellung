                "width": 5,
                "autocomplete": "email",
                "show_in_overview": true
            }
        ],
        "types": {
            "sus": [
                {
                    "name": "tutorium",
                    "label": "Tutorium",
                    "type": "select",
                    "options": [
                        "Q3/4a",
                        "Q3/4b",
                        "Q3/4c",
                        "Q3/4d",
                        "Q3/4e",
                        "Q3/4f",
                        "Q3/4g"
