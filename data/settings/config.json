                        "show_in_overview": true
                    },
                    {
                        "name": "address2",
                        "label": "Adresszusatz",
                        "type": "text",
                        "not_required": true,
                        "width": 12,
                        "autocomplete": "address-line2",
                        "show_in_overview": true
                    },
                    {
                        "name": "zip",
                        "label": "PLZ",
                        "type": "text",
                        "pattern": "[0-9]{5}",
                        "maxlength": 5,
                        "width": 4,
                        "autocomplete": "postal-code",
                        "show_in_overview": true
                    },
                    {
                        "name": "city",
                        "label": "Wohnort",
                        "type": "text",
                        "minlength": 3,
                        "width": 8,
                        "autocomplete": "address-level2",
                        "show_in_overview": true
                    }
                ]
        },
        "payment": {
            "bar": [
                {
                    "name": "secret",
                    "label": "Geheimwort für die Bezahlung",
                    "type": "password",
                    "minlength": 3,
                    "width": 12,
                    "autocomplete": "new-password",
                    "show_in_overview": true
                }
            ]
        }
